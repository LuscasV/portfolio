root = true # informa que essa é a configuração principal do projeto

[*] # faz com que essas regras sejam para todos os arquivos
indent_style = space # tipo de indentação
indent_size = 2 # tamanho da indentação
end_of_line = lf # formatação do final da linha
charset = utf-8 # formatação dos caracteres
trim_trailing_whitespace = true # aplica o espaço atumaticamente ex function somar(a, b) espaço depois da , automatico
insert_final_newline = true # finaliza o arquivo com uma linha em branco